# Database Configuration
# For local development with SQLite:
DATABASE_URL=sqlite+aiosqlite:///./ai_context_bridge.db

# For Google Cloud with PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_context_bridge

DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=150

# API Settings
CORS_ORIGINS=["chrome-extension://*","http://localhost","http://localhost:*"]
MAX_CONTEXT_SIZE=1000000
MAX_MESSAGES_PER_CONTEXT=500
DEFAULT_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Server Configuration
PORT=8000
WORKERS=4
LOG_LEVEL=info
ENV=development
